@{
    ViewBag.Title = "Home Page";
}

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad clientes</h6>
                        <h6 id="totalcliente">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-user fa-2x"></i>
                    </div>

                </div>
            </div>

        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Total de venta</h6>
                        <h6 id="totalventa">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-shopping-bag fa-2x"></i>
                    </div>

                </div>
            </div>

        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-secondary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad producto</h6>
                        <h6 id="totalproducto">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-boxes fa-2x"></i>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>
        Historial de venta

    </div>
    <div class="card-body">

        <form action="@Url.Action("exportarventa","Home")" method="post" name="form">
            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">fecha inicio</label>
                        <input class="form-control" type="text" id="txtfechainicio" name="fechainicio" />
                    </div>

                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">fecha fin</label>
                        <input class="form-control" type="text" id="txtfechafin" name="fechafin" />
                    </div>

                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label"> Id transacion</label>
                        <input class="form-control" type="text" id="txtidtransaccion" name="transaccion" />
                    </div>

                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">

                        <button class=" btn btn-primary" id="btnbuscar" type="button"><i class="fas fa-search"></i>Buscar</button>
                    </div>

                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">

                        <button class="btn btn-success" type="submit" id="btnexportar"><i class="fas fa-file-excel"></i> Exportar</button>
                    </div>

                </div>
            </div>

        </form>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table id="tabla" class="display cell-border" style="width:100%">
                    <thead>
                        <tr>

                            <th>fechaventa</th>
                            <th>cliente</th>
                            <th>producto</th>
                            <th>precio</th>
                            <th>cantidad</th>
                            <th>total</th>
                            <th>idtransaccion</th>
                            




                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>



        </div>

    </div>
</div>

@section scripts{

   
    <script>
      // var $ = jQuery.noConflict();
        var tabladata;
      $(document).ready(function () {





           $("#txtfechainicio").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date())
            $("#txtfechafin").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date())
            // $("#txtfechainicio").datepicker()



            jQuery.ajax({
                url: '@Url.Action("vistadashboard", "Home")',
                type: "GET",

                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var objeto = data.resultado;
                    $("#totalcliente").text(objeto.totalcliente)
                    $("#totalventa").text(objeto.totalventa)
                    $("#totalproducto").text(objeto.totalproducto)

                }
            });

         // jQuery.ajax({
            //    url: '@Url.Action("listareporte", "Home")',
               // type: "GET",

               // dataType: "json",
              //  contentType: "application/json; charset=utf-8",
              //  success: function (data) {
                   // debugger;
                  //  console.log(data)

               // }
            //});

              //string fechainicio, string fechafin, string idtransaccion)
            var Url = '@Url.Action("listareporte", "Home")'+
                "?fechainicio=" + $("#txtfechainicio").val()+
                "&fechafin=" + $("#txtfechafin").val()+
                "&idtransaccion=" + $("#txtidtransaccion").val()

           tabladata = $("#tabla").DataTable({
            Responsive: true,
            ordering: false,
            "ajax": {
                url: Url,
                type: "Get",
                dataType: "json"

            },
            "columns": [
                {"data" : "fechaventa"},
                {"data": "cliente"},
                {"data": "producto" },
                { "data": "precio" },
                { "data": "cantidad" },
                { "data" : "total" },
                { "data" : "idtransaccion" }


              
            ],
            "language": {
                "url":  "https://cdn.datatables.net/plug-ins/2.0.0/i18n/es-ES.json"
            }
        });


      })

        $("#btnbuscar").on("click", function () {

           var nueva_url = '@Url.Action("listareporte", "Home")'+
                "?fechainicio="+ $("#txtfechainicio").val()+
                "&fechafin="+ $("#txtfechafin").val()+
                "&idtransaccion=" + $("#txtidtransaccion").val()

            tabladata.ajax.url(nueva_url).load();




        })




    </script> }